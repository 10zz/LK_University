<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7ECF5"
    tools:context=".PasswordRecoveryActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="343dp"
        android:layout_height="637dp"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/Email"
                android:textColor="#5C5E60"
                app:layout_constraintStart_toStartOf="@+id/emailEditText3"
                app:layout_constraintTop_toBottomOf="@+id/textView12" />

            <EditText
                android:id="@+id/emailEditText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_bg"
                android:ems="10"
                android:hint="@string/enter_email"
                android:inputType="text"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:paddingStart="8dp"
                android:textColor="#5C5E60"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="181dp"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/nngasu_logo_rectangle" />

            <Button
                android:id="@+id/sendButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#005F9C"
                android:text="@string/send_link"
                android:textStyle="bold"
                app:cornerRadius="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/returnButton"
                app:layout_constraintEnd_toEndOf="@+id/emailEditText3"
                app:layout_constraintStart_toEndOf="@id/returnButton" />

            <Button
                android:id="@+id/returnButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:backgroundTint="#FFFFFF"
                android:textColor="#5C5E60"
                android:text="@string/back"
                android:textStyle="bold"
                app:cornerRadius="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/sendButton"
                app:layout_constraintStart_toStartOf="@+id/emailEditText3"
                app:strokeColor="#5C5E60"
                app:strokeWidth="1dp"/>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="286dp"
                android:layout_height="96dp"
                android:layout_marginTop="128dp"
                android:text="@string/forgot_password_text"
                app:layout_constraintEnd_toEndOf="@+id/emailEditText3"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/emailEditText3"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="286dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/link_sent_text"
                app:layout_constraintEnd_toEndOf="@+id/emailEditText3"
                app:layout_constraintStart_toStartOf="@+id/emailEditText3"
                app:layout_constraintTop_toBottomOf="@+id/emailEditText3" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/support_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>