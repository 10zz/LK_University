<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7ECF5"
    tools:context=".PasswordRecoveryActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="343dp"
                android:layout_height="697dp"
                android:layout_marginTop="40dp"
                app:cardCornerRadius="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/confirmPasswordEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/edit_text_bg"
                        android:ems="10"
                        android:hint="@string/enter_password_confirm"
                        android:inputType="text"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        android:paddingStart="8dp"
                        android:textColor="#5C5E60"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="@+id/newPasswordEditText"
                        app:layout_constraintStart_toStartOf="@+id/newPasswordEditText"
                        app:layout_constraintTop_toBottomOf="@+id/textView17" />

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/confirm_password"
                        android:textColor="#5C5E60"
                        app:layout_constraintStart_toStartOf="@+id/confirmPasswordEditText"
                        app:layout_constraintTop_toBottomOf="@+id/newPasswordEditText" />

                    <EditText
                        android:id="@+id/newPasswordEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/edit_text_bg"
                        android:ems="10"
                        android:hint="@string/enter_new_password"
                        android:inputType="text"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        android:paddingStart="8dp"
                        android:textColor="#5C5E60"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="@+id/SNILSEditText"
                        app:layout_constraintHorizontal_bias="0.444"
                        app:layout_constraintStart_toStartOf="@+id/SNILSEditText"
                        app:layout_constraintTop_toBottomOf="@+id/textView16" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/new_password"
                        android:textColor="#5C5E60"
                        app:layout_constraintStart_toStartOf="@+id/newPasswordEditText"
                        app:layout_constraintTop_toBottomOf="@+id/SNILSEditText" />

                    <EditText
                        android:id="@+id/SNILSEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/edit_text_bg"
                        android:ems="10"
                        android:hint="@string/enter_SNILS"
                        android:inputType="text"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        android:paddingStart="8dp"
                        android:textColor="#5C5E60"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="@+id/IDEditText"
                        app:layout_constraintHorizontal_bias="0.444"
                        app:layout_constraintStart_toStartOf="@+id/IDEditText"
                        app:layout_constraintTop_toBottomOf="@+id/textView15" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/SNILS"
                        android:textColor="#5C5E60"
                        app:layout_constraintStart_toStartOf="@+id/SNILSEditText"
                        app:layout_constraintTop_toBottomOf="@+id/IDEditText" />

                    <EditText
                        android:id="@+id/IDEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/edit_text_bg"
                        android:ems="10"
                        android:hint="@string/enter_password_number"
                        android:inputType="text"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        android:paddingStart="8dp"
                        android:textColor="#5C5E60"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView13" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/password_number"
                        android:textColor="#5C5E60"
                        app:layout_constraintStart_toStartOf="@+id/IDEditText"
                        app:layout_constraintTop_toBottomOf="@+id/emailEditText" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/Email"
                        android:textColor="#5C5E60"
                        app:layout_constraintStart_toStartOf="@+id/emailEditText"
                        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

                    <EditText
                        android:id="@+id/emailEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/edit_text_bg"
                        android:ems="10"
                        android:hint="@string/enter_email"
                        android:inputType="text"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        android:paddingStart="8dp"
                        android:textColor="#5C5E60"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView7" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="181dp"
                        android:layout_height="56dp"
                        android:layout_marginTop="24dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/nngasu_logo_rectangle" />

                    <Button
                        android:id="@+id/sendButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#005F9C"
                        android:text="@string/change_password_text"
                        android:textStyle="bold"
                        app:cornerRadius="8dp"
                        app:layout_constraintBottom_toBottomOf="@+id/returnButton"
                        app:layout_constraintEnd_toEndOf="@+id/emailEditText"
                        app:layout_constraintStart_toEndOf="@id/returnButton" />

                    <Button
                        android:id="@+id/returnButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:backgroundTint="#FFFFFF"
                        android:text="@string/back"
                        android:textColor="#5C5E60"
                        android:textStyle="bold"
                        app:cornerRadius="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/sendButton"
                        app:layout_constraintStart_toStartOf="@+id/emailEditText"
                        app:strokeColor="#5C5E60"
                        app:strokeWidth="1dp" />



                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>